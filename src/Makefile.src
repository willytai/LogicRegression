CSRCS = $(wildcard *.cpp)
CHDRS = $(wildcard *.h)
COBJS = $(addsuffix .o, $(basename $(CSRCS)))

DEPENDDIR = -I.

CXX   = g++
CCC   = gcc
AR    = ar cr
ECHO  = /bin/echo

TARGET = ../bin/$(EXEC)

DEBUG_FLAGS =

CONTRAOL_FLAGS = 
CONTRAOL_FLAGS = -DPARALLEL

ABCFLAG = ../lib/libabc.a -lm -ldl -lreadline -lpthread

#Og optimizes debug experience
CFLAGS = -Og -Wall -g $(DEBUG_FLAGS) $(CONTRAOL_FLAGS)
CFLAGS = -O3 -Wall -fopenmp $(CONTRAOL_FLAGS)


.PHONY: depend

all: $(COBJS)
	@$(ECHO) "> building -> $(EXEC) ..."
	@$(CXX) $(CFLAGS) -o $(TARGET) $(COBJS) $(ABCFLAG)

%.o: %.cpp
	@$(ECHO) "> compiling: $< ..."
	@$(CXX) $(CFLAGS) -c -o $@ $<

clean:
	@rm -rf $(COBJS)
	@rm -rf $(TARGET)

## Make dependencies
depend: .depend.mak
.depend.mak: $(CSRCS) $(CHDRS)
	@$(ECHO) Making dependencies ...
	@$(CXX) -MM $(DEPENDDIR) $(CSRCS) > $@

include .depend.mak
